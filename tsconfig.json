{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "./__tests__", "build"],
  "include": ["./src/**/*"],
  "types": ["typePatches"]
}
